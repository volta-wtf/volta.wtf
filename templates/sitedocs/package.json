{
  "name": "@templates/sitedocs",
  "version": "1.0.0",
  "description": "Documentation site template built with Next.js and Fumadocs",
  "type": "module",
  "private": true,
  "scripts": {
    "predev": "setup-assets",
    "dev": "next dev --turbopack --port 4020",
    "prebuild": "copy-assets",
    "build": "next build",
    "start": "next start --port 4020",
    "lint": "next lint --max-warnings 0",
    "check-types": "tsc --noEmit",
    "postinstall": "fumadocs-mdx"
  },
  "dependencies": {
    "@registry/primitives": "workspace:*",
    "@registry/components": "workspace:*",
    "@registry/assets": "workspace:*",
    "@registry/interface": "workspace:*",
    "@tabler/icons-react": "^3.31.0",
    "@vercel/analytics": "^1.4.1",
    "@tailwindcss/postcss": "^4.1.13",
    "tailwind-merge": "^3.0.1",
    "postcss": "^8.5.3",
    "postcss-import": "^16.1.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "next": "^15.5.0",
    "next-themes": "0.4.6",
    "fumadocs-core": "15.3.1",
    "fumadocs-mdx": "11.6.3",
    "fumadocs-ui": "15.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "rehype-pretty-code": "^0.14.1",
    "jotai": "^2.1.0",
    "shiki": "^1.10.1",
    "ts-morph": "18.0.0",
    "zod": "^3.24.1",
    "lucide-react": "0.475.0"
  },
  "devDependencies": {
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1",
    "@studio/config-eslint": "workspace:*",
    "@studio/config-typescript": "workspace:*",
    "@tailwindcss/postcss": "^4.1.13",
    "tailwindcss": "^4.1.13",
    "eslint": "^9.34.0",
    "typescript": "5.9.2"
  }
}
