{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "setup": "node scripts/setup-symlinks.js",
    "prebuild": "node scripts/copy-assets.js",
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "glob": "^11.0.0",
    "prettier": "^3.6.2",
    "turbo": "^2.5.4",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
