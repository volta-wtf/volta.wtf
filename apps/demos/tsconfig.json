{
  "extends": "@repo/config-typescript/nextjs.json",
  "compilerOptions": {
    "plugins": [{ "name": "next" }],
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["../../registry/interface/lib/*","../../registry/primitives/lib/*"],
      "@/utils/*": ["../../registry/primitives/utils/*"],
      "@/primitives/*": ["../../registry/primitives/src/*"],
      "@/components/*": ["./components/*","../../registry/components/*","../../registry/patterns/*"],
      "@/components/ui/*": ["../../registry/components/shad/*"],
      "@/registry/ui/*": ["../../registry/components/shad/*"],
      "@/registry/patterns/*": ["../../registry/patterns/*"],
      "@/interface/*": ["../../registry/interface/*"]
    },
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
