{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*","../../resources/interface/lib/*","../../registry/primitives/lib/*"],
      "@/utils/*": ["../../registry/primitives/utils/*"],
      "@/styles/*": ["./styles/*","../../registry/styles/*"],
      "@/primitives/*": ["../../registry/primitives/src/*"],
      "@/components/*": ["./components/*","../../registry/components/*","../../registry/patterns/*"],
      "@/components/ui/*": ["../../registry/components/ui/*"],
      "@/registry/*": ["../../registry/*"],
      "@/registry/components/ui/*": ["../../registry/components/ui/*"],
      "@/registry/patterns/*": ["../../registry/patterns/*"],
      "@/interface/*": ["../../resources/interface/*"],
      "react": ["./node_modules/@types/react"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "scripts/build-registry.mts",
    "next.config.mjs"
  ],
  "exclude": ["node_modules"]
}
