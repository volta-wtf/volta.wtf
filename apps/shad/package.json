{
  "name": "@studio/shad",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack --port 4000",
    "build": "fumadocs-mdx && pnpm --filter=shad build && next build",
    "start": "next start --port 4000",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "typecheck": "tsc --noEmit",
    "format:write": "prettier --write \"**/*.{ts,tsx,mdx}\" --cache",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache",
    "registry:build": "tsx --tsconfig ./tsconfig.scripts.json ./scripts/build-registry.mts && prettier --log-level silent --write \"registry/**/*.{ts,tsx,json,mdx}\" --cache",
    "registry:capture": "tsx --tsconfig ./tsconfig.scripts.json ./scripts/capture-registry.mts",
    "validate:registries": "tsx --tsconfig ./tsconfig.scripts.json ./scripts/validate-registries.mts",
    "postinstall": "fumadocs-mdx || true"
  },
  "dependencies": {
    "@registry/components": "workspace:*",
    "@registry/patterns": "workspace:*",
    "@tabler/icons-react": "^3.31.0",
    "@faker-js/faker": "^8.2.0",
    "@tailwindcss/postcss": "^4.1.11",
    "@vercel/analytics": "^1.4.1",
    "change-case": "^5.4.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "fumadocs-core": "15.3.1",
    "fumadocs-docgen": "2.0.0",
    "fumadocs-mdx": "11.6.3",
    "fumadocs-ui": "15.3.1",
    "jotai": "^2.1.0",
    "lodash": "^4.17.21",
    "lucide-react": "0.474.0",
    "motion": "^12.12.1",
    "next": "15.3.1",
    "next-themes": "0.4.6",
    "postcss": "^8.5.1",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "recharts": "2.15.1",
    "sonner": "^2.0.0",
    "rehype-pretty-code": "^0.14.1",
    "rimraf": "^6.0.1",
    "shadcn": "3.4.0",
    "shiki": "^1.10.1",
    "tailwind-merge": "^3.0.1",
    "ts-morph": "18.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.1",
    "@tailwindcss/postcss": "^4",
    "@types/lodash": "^4.17.7",
    "@types/mdx": "^2.0.13",
    "@types/node": "^20",
    "@types/react": "19.1.2",
    "@types/react-dom": "19.1.2",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.1",
    "prettier": "^3.4.2",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tailwindcss": "^4.1.11",
    "tw-animate-css": "^1.2.4",
    "typescript": "^5",
    "unist-builder": "3.0.0",
    "unist-util-visit": "^4.1.2"
  },
  "prettier": {
    "endOfLine": "lf",
    "semi": false,
    "singleQuote": false,
    "tabWidth": 2,
    "trailingComma": "es5",
    "importOrder": [
      "^(react/(.*)$)|^(react$)",
      "^(next/(.*)$)|^(next$)",
      "<THIRD_PARTY_MODULES>",
      "",
      "^@workspace/(.*)$",
      "",
      "^types$",
      "^@/types/(.*)$",
      "^@/config/(.*)$",
      "^@/lib/(.*)$",
      "^@/hooks/(.*)$",
      "^@/components/ui/(.*)$",
      "^@/components/(.*)$",
      "^@/registry/(.*)$",
      "^@/styles/(.*)$",
      "^@/app/(.*)$",
      "^@/www/(.*)$",
      "",
      "^[./]"
    ],
    "importOrderParserPlugins": [
      "typescript",
      "jsx",
      "decorators-legacy"
    ],
    "plugins": [
      "@ianvs/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ]
  }
}
